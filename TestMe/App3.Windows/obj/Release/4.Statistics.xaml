<Page x:ConnectionId='1'
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test_me_alfa"
    xmlns:common="using:Test_me_alfa.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="pageRoot"
    x:Class="Test_me_alfa.Statistics"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d"
    RequestedTheme="Light"
                            
                                >

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Нажмите на строку слева, чтобы увидеть результаты</x:String>
        <CollectionViewSource x:Name="statMain" IsSourceGrouped="true" ItemsPath="group"/>
    </Page.Resources>

    <Grid Background="#FFEEEEEE">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="gName" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
				TextWrapping="WrapWholeWords" VerticalAlignment="Bottom" Margin="10,0,101,40" Foreground="Black" FontSize="36"/>
            <AppBarButton x:ConnectionId='4' HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,46,-1,0" Width="88" Icon="Back"  AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"                           />
        </Grid>

        <Grid x:Name="main" Grid.Row="1">
                    <Charting:Chart x:Name="Charty" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,110"  >
                <Charting:PieSeries Margin="0" IndependentValuePath="Title" DependentValuePath="Result" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            </Charting:Chart>
            <Button x:ConnectionId='3' Name="ChangeTextBtn" Content="Текст результата"                       VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="150" Foreground="#FF131313" RequestedTheme="Dark" Background="#FFE1E1E1" BorderBrush="#FFBCBCBC" BorderThickness="0" Height="50"/>
            <TextBlock Name="descBlock" FontSize="22" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20,20,20,20" TextWrapping="WrapWholeWords" SelectionHighlightColor="{x:Null}" Margin="0,0,0,100" />
        </Grid>
        <Border BorderBrush="#1fbfba" BorderThickness="10,5,10,80" RenderTransformOrigin="0,1" CornerRadius="120" Grid.RowSpan="2">
        	<TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" 
        		TextWrapping="WrapWholeWords" VerticalAlignment="Bottom" Margin="0,0,0,-50" Foreground="White" SelectionHighlightColor="#00525252" HorizontalAlignment="Center" FontSize="48"/>
        </Border>
        <ListView x:ConnectionId='2' x:Name="lvMain" 
                  IsRightTapEnabled="False" 
                  IsItemClickEnabled="True" 
                  Grid.Row="1" 
                  SelectionMode="None" 
                  RequestedTheme="Light" 
                  HorizontalAlignment="Left" 
                  HorizontalContentAlignment="Center" 
                  VerticalContentAlignment="Center" 
                  IsDoubleTapEnabled="False" 
                  IsHoldingEnabled="False" 
                  IsTapEnabled="False" 
                  ManipulationMode="None" 
                  Margin="80,0,0,110" 
                  VerticalAlignment="Center"
                                              />
    </Grid>
</Page>

