<Page x:ConnectionId='1'
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test_me_alfa"
    xmlns:common="using:Test_me_alfa.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="pageRoot"
    x:Class="Test_me_alfa.GraphPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d"
    RequestedTheme="Light"
                            
                                 
    >

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Тесты</x:String>
    </Page.Resources>

    <Grid Background="#FFEEEEEE">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
				TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,101,40" Foreground="Black"/>
        </Grid>

        <Grid x:Name="main" Grid.Row="1" Grid.RowSpan="2">

            <TextBlock x:Name="tbRes" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="WrapWholeWords" 
                       Padding="30,0,0,0" Margin="10, 10, 10, 100"
                       FontSize="18" FontFamily="Segoe UI" Foreground="#FF292929" />
            <Charting:Chart x:Name="Charty" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0" >
                <Charting:PieSeries Margin="0" IndependentValuePath="Title" DependentValuePath="Result"/>
            </Charting:Chart>
            <Button x:ConnectionId='4' Name="ChangeTextBtn" 
                    Content="Текст результата" 
                                          
                    VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                    Width="auto" Foreground="#FF131313" 
                    RequestedTheme="Dark" Background="#FFE1E1E1" BorderBrush="#FFBCBCBC" BorderThickness="0" Height="50"/>
            
            <ScrollViewer Name="Scroller" 
                          VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Visible"
                          HorizontalAlignment="Right" 
                          Visibility="Collapsed"
                          Margin="10,10,10,200"
                          >
            <TextBlock Name="descBlock" 
                       FontSize="20" HorizontalAlignment="Right" 
                       Visibility="Collapsed" 
                       Padding="20" TextWrapping="WrapWholeWords" 
                       SelectionHighlightColor="{x:Null}"                  
                       />
            </ScrollViewer>
        </Grid>
        <Border BorderBrush="#1fbfba" BorderThickness="10,5,10,80" RenderTransformOrigin="0,1" CornerRadius="120" Grid.RowSpan="3">
        	<Image Margin="0,0,0,-70" Source="Assets/logo50.scale-100.png" Stretch="Fill" Height="60" Width="60" VerticalAlignment="Bottom"/>
        </Border>
        <AppBarButton x:ConnectionId='2' x:Name="Again" HorizontalAlignment="Center" VerticalAlignment="Bottom" Label="Заново" Height="86"                              RequestedTheme="Dark" Foreground="#FFEEEEEE" Margin="0,0,250,0" Grid.Row="2">

            <AppBarButton.Icon>
                <SymbolIcon Symbol="RepeatAll" Height="40" VerticalAlignment="Top"/>
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:ConnectionId='3' x:Name="Menu" HorizontalAlignment="Center" VerticalAlignment="Bottom" Label="В Меню" Height="86" RequestedTheme="Dark" Margin="250,0,0,0" Foreground="#FFEEEEEE" Grid.Row="2"                   >

            <Image Source="Assets/logo50.png"></Image>
            
            <AppBarButton.Icon>
                <SymbolIcon Symbol="GoToStart" Height="40" VerticalAlignment="Top"/>
            </AppBarButton.Icon>
        </AppBarButton>
        

    </Grid>
</Page>

