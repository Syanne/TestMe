<?xml version="1.0" encoding="utf-8" ?>
<head qcount="15" max="15" name="Обществознание">
  <question number="1" name="Абсолютная истина, в отличие от относительной истины, – это">
    <ans id="1" value="0" means="Выводы, полученные научным путем"/>
    <ans id="2" value="0" means="суждения, лишенные субъективных оценок"/>
    <ans id="3" value="1" means="исчерпывающее знание о предмете"/>
    <ans id="4" value="0" means="экспериментально установленные факты"/>
  </question>
  <question number="2" name="Необходимым условием развития рыночной экономики является">
    <ans id="1" value="0" means="устранение неравенства доходов населения"/>
    <ans id="2" value="0" means="увеличение расходов государственного бюджета"/>
    <ans id="3" value="1" means="частная собственность на средства производства"/>
    <ans id="4" value="0" means="превышение предложения над спросом"/>
  </question>
  <question number="3" name="Найдите в приведенном списке примеры циклической безработицы.">
    <ans id="1" value="0" means="с появлением компьютеров секретари-машинистки оказались не востребованными на рынке труда"/>
    <ans id="2" value="1" means="экономический кризис привел к росту безработицы на предприятиях различных отраслей"/>
    <ans id="3" value="0" means="сотрудники разорившегося в условиях острой конкуренции предприятия потеряли свою работу"/>
  </question>
  <question number="4" name="Нормы права, в отличие от других социальных норм, всегда">
    <ans id="1" value="0" means="регулируют общественные отношения"/>
    <ans id="2" value="1" means="устанавливаются государством"/>
    <ans id="3" value="0" means="гарантируют равноправие"/>
    <ans id="4" value="0" means="обеспечивают социальную справедливость"/>
  </question>
  <question number="5" name="Демократический режим, в отличие от авторитарного, характеризуется">
    <ans id="1" value="0" means="наличием судебной системы"/>
    <ans id="2" value="0" means="лидерством одной политической партии"/>
    <ans id="3" value="0" means="избранием законодательного органа власти"/>
    <ans id="4" value="1" means="верховенством закона"/>
  </question>
  <question number="6" name="Какой признак относится к индустриальному обществу?">
    <ans id="1" value="0" means="ведущая роль сельского хозяйства"/>
    <ans id="2" value="1" means="преобладание промышленности"/>
    <ans id="3" value="0" means="слабый уровень разделения труда"/>
    <ans id="4" value="0" means="решающее значение сферы услуг в экономике"/>
  </question>
  <question number="7" name="Что из перечисленного является формой территориально-государственного устройства?">
    <ans id="1" value="1" means="федерация"/>
    <ans id="2" value="0" means="республика"/>
    <ans id="3" value="0" means="монархия"/>
    <ans id="4" value="0" means="демократия"/>
  </question>
  <question number="8" name=" Верны ли следующие суждения об общественном прогрессе? &#13;А. Прогресс в одной области общественной жизни может сопровождаться регрессом в другой. &#13;Б. Общественный прогресс графически можно изобразить в виде восходящей изломанной линии.">
    <ans id="1" value="0" means="верно только А"/>
    <ans id="2" value="0" means="верно только Б "/>
    <ans id="3" value="1" means="верны оба суждения"/>
    <ans id="4" value="0" means="оба суждения неверны"/>
  </question>
  <question number="9" name="Человек, согласно современным представлениям, есть существо">
    <ans id="1" value="0" means="духовное"/>
    <ans id="2" value="0" means="социальное"/>
    <ans id="3" value="0" means="биологическое "/>
    <ans id="4" value="1" means="биосоциальное"/>
  </question>
  <question number="10" name="Социализацией личности называется">
    <ans id="1" value="0" means="развитие природных задатков и индивидуальных склонностей человека"/>
    <ans id="2" value="0" means="столкновение интересов, мнений, взглядов отдельных людей"/>
    <ans id="3" value="1" means="освоение индивидом культурных ценностей общества"/>
    <ans id="4" value="0" means="поведение человека, противоречащее принятым в обществе социальным нормам"/>
  </question>
  <question number="11" name="Реформа в отличие от революции:">
    <ans id="1" value="0" means="носит всеобъемлющий характер"/>
    <ans id="2" value="0" means="является формой социальной динамики"/>
    <ans id="3" value="1" means="проводится, как правило, по инициативе сверху"/>
    <ans id="4" value="0" means="приводит к глубоким изменениям в общественной жизни"/>
  </question>
  <question number="12" name="Общественный прогресс выражается в:">
    <ans id="1" value="1" means="поступательном развитии общества"/>
    <ans id="2" value="0" means="связях общества и природы"/>
    <ans id="3" value="0" means="устойчивости форм общественной жизни "/>
    <ans id="4" value="0" means="системном устройстве общества"/>
  </question>
  <question number="13" name="При формировании какой общности значительную роль играет единство территории и языка?">
    <ans id="1" value="0" means="культурной"/>
    <ans id="2" value="1" means="этнической"/>
    <ans id="3" value="0" means="демографической"/>
    <ans id="4" value="0" means="социально-классовой"/>
  </question>
  <question number="14" name="Понятие «элемент», «структура», «взаимосвязь» используется при рассмотрении общества как:">
    <ans id="1" value="0" means="среды обитания человека"/>
    <ans id="2" value="0" means="динамической системы"/>
    <ans id="3" value="1" means="целостной системы"/>
    <ans id="4" value="0" means="Выделившейся части материального мира"/>
  </question>
  <question number="15" name="Переход к постиндустриальному обществу характеризуется:">
    <ans id="1" value="0" means="формированием рыночной экономики"/>
    <ans id="2" value="0" means="ограничением социальной мобильности"/>
    <ans id="3" value="1" means="развитием средств массовой коммуникации"/>
    <ans id="4" value="0" means="организацией фабричного производства"/>
  </question>

  <end>
    <result min="11" >Вы отлично разбираетесь в обществознании.</result>
    <result min="7" >Результат средний. Если у Вас скоро экзамен, то стоит лучше подготовиться.</result>
    <result min="0" >Результат оставляет желать лучшего.</result>
  </end>
</head>
